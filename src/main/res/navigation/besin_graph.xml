<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/besin_graph"
    app:startDestination="@id/foodListsFragment">

    <fragment
        android:id="@+id/foodListsFragment"
        android:name="com.example.foodbook.view.FoodListsFragment"
        android:label="FoodListsFragment" >
        <action
            android:id="@+id/action_foodListsFragment_to_foodDetailFragment"
            app:destination="@id/foodDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/foodDetailFragment"
        android:name="com.example.foodbook.view.FoodDetailFragment"
        android:label="FoodDetailFragment" >
        <action
            android:id="@+id/action_foodDetailFragment_to_foodListsFragment"
            app:destination="@id/foodListsFragment" />
        <argument
            android:name="foodId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
</navigation>